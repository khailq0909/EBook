@model ICollection<Category>
<div class="container col-md-8 text-center mt-3">
        <a class="btn btn-info mb-3" asp-controller="Category" asp-action="Add">Add Category</a>
    <table class="table table-primary">
        @if (TempData["Message"] != null)
        {
            <tr>
                <th colspan="3" class="text text-success h6">@TempData["Message"]</th>
            </tr>
        }

        <tr>
            <th colspan="3" class="text text-success h2">Category List</th>

        </tr>
        <tr class="bg-light">

            <th>Name</th>
            <th>Menu</th>
        </tr>
        @foreach (var cte in Model)
        {
            <tr>
                <td>
                    @cte.Name
                </td>
                <td>
                    <a class="btn btn-primary" asp-controller="Category" asp-action="Edit" asp-route-id="@cte.Id">Edit</a>

                    <a class="btn btn-primary" asp-controller="Category" asp-action="Delete" asp-route-id="@cte.Id" Onclick="return confirm('Do you want to delete this category')">Delete</a>
                </td>
            </tr>
        }

    </table>
</div>
