@model EBook.Models.Book

<div class="container col-md-10 text-center mt-3">
    <div class="row">
        <div class="col">
            <img src="@Model.Image" width="300" height="300">
            <h4 class="text text-success">@Model.Name</h4>
        </div>
        <div class="col">
            <table class="table table-bordered">
                <tr>
                    <th colspan="2" class="h3 bg-light text-success">Book Info</th>
                </tr>
                <tr>
                    <th>Book Price</th>
                    <td>@Model.Price</td>
                </tr>
                <tr>
                    <th>Book Quantity</th>
                    <th>
                        @if (@Model.Quantity == 0)
                        {
                            <p class="font-weight-bold">Out of stock</p>
                        }
                        else
                        {
                            <p>@Model.Quantity</p>
                        }
                    </th>
                </tr>
                <tr>
                    <th>Book Author</th>
                       <td>
                        <a asp-controller="Author" asp-action="Detail" asp-route-id="@Model.Author.Id">
                            @Model.Author.FullName
                        </a>
                    </td> 
                </tr>
                <tr>
                    <th>Book Category</th>
                    <td>
                        @Model.Category.Name
                    </td>
                </tr>
            </table>
        </div>
    </div>
</div>