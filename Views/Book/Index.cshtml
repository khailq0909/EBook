@model ICollection<Book>
<div class="container col-md-8 text-center mt-3">
<table class="table table-primary">
    @if(TempData["Message"]!=null){
        <tr>
            <th colspan="5" class="text text-success h6">@TempData["Message"]</th>
        </tr>
    }
    
    <tr>
        <th colspan="4" class="text text-success h2">Book List</th>
        <th colspan="4" class="text text-success h2">
            <a class="btn btn-info" asp-controller="Book" asp-action="Add">Add Book</a>
        </th>
    </tr>
    <tr class="bg-light">
        <th>No</th>
        <th>Name</th>
        <th>Price</th>
        <th>Image</th>
        <th>Menu</th>
    </tr>
        @foreach (var book in Model)
        {
                <tr>
                <td>
                    NO
                </td>
                <td>
                    @book.Name
                </td>
                <td>
                    @book.Price
                </td>
                <td>
                    <a asp-controller="Book" asp-action="Detail" asp-route-id="@book.Id"><img src="@book.Image"/ width="100" height="100"></a>

                </td>
                <td>
                    <a class ="btn btn-primary"  asp-controller="Book" asp-action="Edit" asp-route-id="@book.Id">Edit</a>

                    <a class ="btn btn-primary"  asp-controller="Book" asp-action="Delete" asp-route-id="@book.Id" Onclick="return confirm('Do you want to delete this book')">Delete</a>
                </td>
            </tr>
        }

</table>
</div>
