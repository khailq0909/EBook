@model EBook.Models.Author

<div class="container col-md-10 text-center mt-3">
    <div class="row">
        <div class="col">
            <img src="@Model.Image" width="300" height="300">
            
        </div>
        <div class="col">
            <table class="table table-bordered">
                <tr>
                    <th colspan="2" class="h3 bg-light text-success">Book Info</th>
                </tr>
                <tr>
                    <th>Book Price</th>
                    <td>@Model.Name</td>
                </tr>
                <tr>
                    <th>Full Name</th>
                    <td>@Model.FullName</td>
                </tr>
                <tr>
                    <th>Full Birth</th>
                    <td>@Model.Birth</td>
                </tr>
                <tr>
                    <th>Author Description</th>
                    <td>@Model.Descrtiption</td>
                </tr>
                <tr>
                    <th>Book</th>
                    @foreach (var a in Model.Book)
                   {
                       <td>
                        <a asp-controller="Book" asp-action="Detail" asp-route-id="@a.Id">
                            @a.Name
                        </a>
                    </td>
                   }  
                </tr>
            </table>
        </div>
    </div>
</div>